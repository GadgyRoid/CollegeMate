<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gadgetroid.collegemate" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AssignmentList"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewAssignment"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_new_assignment"
            android:parentActivityName=".AssignmentList"
            android:theme="@style/NewAssTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gadgetroid.collegemate.AssignmentList" />
        </activity>

        <service
            android:name=".AlarmService"
            android:enabled="true" />

        <receiver android:name=".Receiver" />

        <activity
            android:name=".AssignmentDetails"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_assignment_details"
            android:parentActivityName=".AssignmentList"
            android:theme="@style/NewAssTheme.Blue" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gadgetroid.collegemate.AssignmentList" />
        </activity>
        <activity
            android:name=".ToDoItemListActivity"
            android:label="@string/title_todoitem_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToDoItemDetailActivity"
            android:label="@string/title_todoitem_detail"
            android:parentActivityName=".ToDoItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gadgetroid.collegemate.ToDoItemListActivity" />
        </activity>
    </application>

</manifest>
