<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gadgetroid.collegemate.AboutAcitvity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/AboutBannerImageView"
            android:layout_width="fill_parent"
            android:layout_height="180dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>

        <com.pkmmte.view.CircularImageView
            android:id="@+id/AboutProfileImageView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:border="true"
            app:border_color="#EEEEEE"
            app:border_width="2dp"
            app:shadow="true"
            android:layout_above="@+id/AboutNameTextView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/AboutNameTextView"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Amogh Harish"
            android:textStyle="bold"
            android:textColor="@color/abc_primary_text_material_dark"
            android:padding="8dp"
            android:textSize="@dimen/abc_text_size_title_material_toolbar"
            android:shadowColor="#17000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
