<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/tealDark</item>
        <item name="colorAccent">@color/greenAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <!--item name="android:windowExitTransition">@android:transition/no_transition</item-->

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowSharedElementReenterTransition">@null</item>
        <item name="android:windowReenterTransition">@null</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <!--item name="android:windowSharedElementExitTransition">@android:transition/no_transition</item-->
    </style>

    <style name="NewAssTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/tealDark</item>
        <item name="colorAccent">@color/greenAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_dark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_close</item>
        <item name="colorControlActivated">@color/greenAccent</item>
        <item name="colorControlHighlight">@color/greenAccent</item>
        <item name="actionModeStyle">@style/NewCABTheme</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="NewAssTheme.Blue" parent="NewAssTheme">
        <item name="android:colorPrimaryDark">#0288D1</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="actionOverflowButtonStyle">@style/Overflow.Blue.Light</item>
        <item name="android:actionMenuTextColor">#000000</item>
        <item name="android:actionButtonStyle">@style/NewAssTheme.Blue.ActionButton</item>
        <item name="actionButtonStyle">@style/NewAssTheme.Blue.ActionButton</item>
    </style>

    <style name="NewCABTheme" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:titleTextStyle">@style/CABTitleTextStyle</item>
        <item name="android:background">@color/teal</item>
    </style>

    <style name="NewAssTheme.Blue.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">32dip</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Overflow.Blue.Light" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/abc_ic_menu_moreoverflow_mtrl_alpha</item>
    </style>

    <style name="CABTitleTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>
