<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/tealDark</item>
        <item name="colorAccent">@color/greenAccent</item>
    </style>

    <style name="normalText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="subText">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NewAssTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/tealDark</item>
        <item name="colorAccent">@color/greenAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_close</item>
        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_dark</item>
        <item name="android:actionModeStyle">@style/NewCABTheme</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="NewCABTheme" parent="Widget.AppCompat.ActionMode">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
    </style>

</resources>
